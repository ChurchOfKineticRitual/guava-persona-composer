<?xml version="1.0" encoding="UTF-8"?>
<KlarkKentStudioPersona>
    <Metadata>
        <Purpose>Defines technical parameters and API configurations for the Studio Agent's orchestration role.</Purpose>
        <TargetUser>Automated Content Orchestration Agent</TargetUser>
        <Version>1.0</Version>
    </Metadata>

    <API_Configurations>
        <Elevenlabs>
            <Endpoint>https://api.elevenlabs.io/v1/</Endpoint>
            <API_Key>YOUR_ELEVENLABS_API_KEY_HERE</API_Key>
        </Elevenlabs>
        <LemonSlice>
            <Endpoint>https://api.lemonslice.com/v1/</Endpoint>
            <API_Key>YOUR_LEMONSLICE_API_KEY_HERE</API_Key>
        </LemonSlice>
        <Creatomate>
            <Endpoint>https://api.creatomate.com/v1/</Endpoint>
            <API_Key>YOUR_CREATOMATE_API_KEY_HERE</API_Key>
        </Creatomate>
        <Airtable>
            <Endpoint>https://api.airtable.com/v0/</Endpoint>
            <API_Key>YOUR_AIRTABLE_API_KEY_HERE</API_Key>
            <BaseID>YOUR_AIRTABLE_BASE_ID_HERE</BaseID>
            <TableName>Generated_Assets</TableName>
        </Airtable>
    </API_Configurations>

    <OutputExpectations>
        <Item>All generated asset URLs (audio, image, video) must be captured.</Item>
        <Item>Metadata associated with each asset (e.g., original text, timestamp) should be included in Airtable record.</Item>
        <Item>Confirmation of Airtable record creation.</Item>
    </OutputExpectations>
</KlarkKentStudioPersona>